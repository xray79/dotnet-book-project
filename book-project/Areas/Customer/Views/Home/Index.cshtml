@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Product>

<div class="">
    <section class="w-full h-screen bg-center bg-no-repeat bg-[url('https://flowbite.s3.amazonaws.com/docs/jumbotron/conference.jpg')] bg-gray-700 bg-blend-multiply">
        <div class="px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-56">
            <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl">
                Book Project
            </h1>
            <p class="mb-8 text-lg font-normal text-gray-300 lg:text-xl sm:px-16 lg:px-48">
                Click the content management section to see product and category CRUD operations
            </p>
            <p class="mb-8 text-lg font-normal text-gray-300 lg:text-xl sm:px-16 lg:px-48">
                Only Admin users have access to content management, please sign up with an Admin role
            </p>
        </div>
    </section>
    
    <section class="bg-gray-600 py-12">
        <h1 class="py-8 text-3xl font-extrabold text-center dark:text-white md:text-5xl lg:text-6xl">
            List of <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">All our books</span>
        </h1>

        <div class="container mx-auto text-center grid md:grid-cols-2 items-center place-self-center my-5 gap-3">
            @foreach (var product in @Model)
            {
                <a asp-action="details" asp-route-id="@product.Id" class="block max-w-sm p-6 bg-white mx-auto border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:text-gray-500 dark:border-gray-700 dark:hover:bg-gray-700">

                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                        @product.Title
                    </h5>
                    <p class="font-normal text-gray-700 dark:text-gray-400">
                        @product.Category
                    </p>
                    <p class="">
                        @product.Description
                    </p>
                    <p class="text-white">@product.Author</p>
                </a>
            }
        </div>
    </section>
</div>